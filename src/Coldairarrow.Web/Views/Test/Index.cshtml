                    value: "006",
                },
                {
                    title: "iPhone 6SP",
                    value: "007",
                },
                {
                    title: "iPhone SE",
                    value: "008",
                },
                {
                    title: "iPhone 7",
                    value: "009"
                }
            ]
        });
        $(function () {
            $('#changeSelect').click(function () {
                $('#area').select('update', { items: item2 })
            });
        });
    </script>
</body>
</html>